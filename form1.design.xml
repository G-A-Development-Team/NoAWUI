<Form Name="Main"
      X="400" Y="100"
      Width="800" Height="600"
      Background="theme.ui2.lowpoly1" Border="theme.ui2.border"
      Drag="True" Image="jpg, https://raw.githubusercontent.com/G-A-Development-Team/libs/main/1326583.jpg">

    <Panel Name="TitleBar" Parent="Main" 
           Y="-25"
           Width="180" Height="25"
           Background="theme.footer.bg" Border="theme.ui2.border"
           Roundness="4,4,4,0,0">

        <Label Name="Title" Parent="TitleBar" 
               X="15" Y="5"
               Color="theme.header.text"
               Text="Music Kit Changer" />
    </Panel>

    <Panel Name="ActionBar" Parent="Main"
           X="770" Y="-25"
           Width="30" Height="25"
           Background="theme.footer.bg" Border="theme.ui2.border"
           Roundness="4,4,4,0,0">

        <Button Name="Exit" Parent="ActionBar" 
                Width="30" Height="25"
                Background="0,0,0,0" Border="theme.ui2.border"
                Roundness="4,4,4,0,0"
                FontWeight="1000" FontHeight="25"
                Text="X" MouseClick="Form:Click()" />       
    </Panel>

    <!--Tab1-->
    <Panel Name="Tab1_Groupbox1" Parent="Main" Group="Tab1" 
           X="15" Y="15"
           Width="770" Height="292"
           Background="33,33,33,200" Border="50,50,50,150"
           Roundness="7,7,7,7,7">

        <PictureBox Name="KitPreview" Parent="Tab1_Groupbox1" Group="Tab1"
                    X="20" Y="20"
                    Width="250" Height="252"
                    Background="255,255,255,200" 
                    Image="jpg, https://raw.githubusercontent.com/G-A-Development-Team/libs/main/1326583.jpg" />
        
        <Label Name="KitName" Parent="Tab1_Groupbox1" Group="Tab1"
               X="630" Y="15"
               Color="255,255,255,255"
               Text="Music Kit Group" />
    </Panel>

    <!--Navigation-->
    <Panel Name="Tabs" Parent="Main"
           X="15" Y="549"
           Width="770" Height="50"
           Background="theme.header.bg" Border="theme.header.line"
           Roundness="4,0,0,0,0">

        <Button Name="Tab1" Parent="Tabs"
                X="5" Y="5"
                Width="100" Height="40"
                Background="theme.nav.bg" Border="theme.nav.active" Active="theme.nav.active"
                FontWeight="500" FontHeight="18"
                Text="Changer" MouseClick="Form:Tab1()" />

        <Button Name="Tab2" Parent="Tabs"
                X="110" Y="5"
                Width="100" Height="40"
                Background="theme.nav.bg" Border="theme.nav.active" Active="theme.nav.active"
                FontWeight="500" FontHeight="18"
                Text="Manager" MouseClick="Form:Tab2()" />

        <Button Name="Tab3" Parent="Tabs"
                X="215" Y="5"
                Width="100" Height="40"
                Background="theme.nav.bg" Border="theme.nav.active" Active="theme.nav.active"
                FontWeight="500" FontHeight="18"
                Text="Banner" MouseClick="Form:Tab2()" />

        <Button Name="Tab4" Parent="Tabs"
                X="320" Y="5"
                Width="100" Height="40"
                Background="theme.nav.bg" Border="theme.nav.active" Active="theme.nav.active"
                FontWeight="500" FontHeight="18"
                Text="Remover" MouseClick="Form:Tab2()" />

        <Button Name="Tab5" Parent="Tabs"
                X="665" Y="5"
                Width="100" Height="40"
                Background="theme.nav.bg" Border="theme.nav.active" Active="theme.nav.active"
                FontWeight="500" FontHeight="18"
                Text="About" MouseClick="Form:Tab2()" />
    </Panel>

</Form>